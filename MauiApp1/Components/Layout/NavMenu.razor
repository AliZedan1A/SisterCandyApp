@inject NavigationManager Navigation

<nav class="main-nav">
    <div class="nav-brand">
        <a href="/">
            <i class="fas fa-candy-cane"></i>
            <span>Sisters Candy</span>
        </a>
    </div>

    <div class="nav-links">
        @if (ShowMenuButton)
        {
                <button class="nav-btn" @onclick="ToggleMenu">
                    <i class="fas fa-bars"></i>
                </button>
        }
        <div class="dropdown-menu @(isMenuOpen ? "show" : "")">
            <a href="/" class="dropdown-item">
                <i class="fas fa-home"></i> الرئيسية
            </a>
            <a href="/Admin" class="dropdown-item">
                <i class="fa-solid fa-pen-to-square"></i> ادارة المبيعات
            </a>

            <a href="/Orders" class="dropdown-item">
                    <i class="fa-solid fa-list-check"></i> الطلبات
            </a>
            
        </div>
    </div>
</nav>

@code {
    private bool isMenuOpen = false;

    [Parameter]
    public bool ShowMenuButton { get; set; } = true;


    private void ToggleMenu() => isMenuOpen = !isMenuOpen;

}

<style>
    .main-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: #FF69B4;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        margin: 0;
        border-bottom: 2px solid var(--accent);
    }

    .nav-brand a {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        color: white;
        text-decoration: none;
        font-family: 'Dancing Script', cursive;
        font-size: 1.8rem;
        margin-left: 1rem;
    }

    .nav-links {
        position: relative;
        margin-right: 1rem;
    }

    .nav-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0.5rem;
    }

    .dropdown-menu {
        position: absolute;
        right: 0;
        top: 100%;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        display: none;
        min-width: 200px;
        z-index: 1001;
    }

    .dropdown-menu.show {
        display: block;
        animation: slideDown 0.3s ease;
    }

    .dropdown-item {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 1rem;
        color: #444;
        text-decoration: none;
        transition: 0.3s;
    }

    .dropdown-item:hover {
        background: #FFB6C1;
        color: white;
    }

    @@keyframes slideDown {
        from { transform: translateY(-10px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    @@media (max-width: 768px) {
        .nav-brand span {
            display: none;
        }

        .main-nav {
            padding: 1rem;
        }
    }
</style>